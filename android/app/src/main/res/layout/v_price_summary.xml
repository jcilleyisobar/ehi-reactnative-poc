<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="PriceSummaryViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/review_section_divider_margin"
            android:background="@color/ehi_grey_header_bg" />

        <TextView
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/section_header_background"
            android:paddingBottom="@dimen/padding_xsmall"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="@dimen/padding_xsmall"
            android:text="@string/price_section_title_rental_cost"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/section_divider" />

        <LinearLayout
            android:id="@+id/mileage_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/section_mileage_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/mileage_title"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/section_mileage_title"
                android:fontFamily="@font/source_sans_bold"
                tools:text="Mileage Included: 500 miles" />

            <TextView
                android:id="@+id/mileage_subtitle"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/section_mileage_title"
                android:fontFamily="@font/source_sans_light"
                tools:text="$1.10 per additional mile" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/custom_promotional_rate_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/confirmation_coupon_header_background"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/custom_promotional_rate_text"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_bold"
                tools:text="CUSTOM RATE" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/ehi_black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ehi.enterprise.android.ui.reservation.widget.RentalCollapsibleView
                android:id="@+id/rental_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@+id/custom_promotional_rate_triangle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_black_triangle"
                android:rotation="180"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <com.ehi.enterprise.android.ui.reservation.widget.MiscellaneousCollapsibleView
            android:id="@+id/miscellaneous_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.reservation.widget.ExtrasCollapsibleView
            android:id="@+id/extras_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.reservation.widget.TaxesAndFeesCollapsibleView
            android:id="@+id/taxes_and_fees_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/estimated_total_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="@dimen/padding_base">

            <TextView
                android:id="@+id/estimated_total_text_view"
                style="@style/TextViewSize22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="@string/reservation_review_estimated_total_title"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light" />

            <TextView
                android:id="@+id/estimated_total"
                style="@style/TextViewSize28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_regular"
                tools:text="$100.00"/>

            <TextView
                android:id="@+id/estimated_total_modify"
                style="@style/TextViewSize22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_regular"
                tools:text="$100.00"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_paid_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="@dimen/padding_base"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/total_paid_amount_text_view"
                    style="@style/TextViewSize22"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:maxLines="1"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    android:id="@+id/total_paid_amount_desc_text_view"
                    style="@style/TextViewSize18"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

            </LinearLayout>

            <TextView
                android:id="@+id/total_paid_amount"
                style="@style/TextViewSize28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_regular"
                tools:text="$100.00"/>

            <TextView
                android:id="@+id/total_paid_amount_modify"
                style="@style/TextViewSize22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_regular"
                tools:text="$100.00"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_refund_owe_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="@dimen/padding_base"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/total_refund_owe_amount_text_view"
                    style="@style/TextViewSize22"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:maxLines="1"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    android:id="@+id/total_refund_owe_amount_desc_text_view"
                    style="@style/TextViewSize18"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

            </LinearLayout>

            <TextView
                android:id="@+id/total_refund_owe_amount"
                style="@style/TextViewSize28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_regular"
                tools:text="$100.00" />

        </LinearLayout>

        <TextView
            android:id="@+id/actual_amount_text_view"
            android:text="@string/reservation_cancel_currency_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_xlarge"
            android:gravity="right"
            style="@style/TextViewSize14"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_light_italic"/>

        <TextView
            android:id="@+id/traveling_us_canada_clarification"
            style="@style/TextViewSize18"
            android:paddingRight="@dimen/margin_xlarge"
            android:paddingLeft="@dimen/margin_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ehi_black"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@string/reservation_currency_conversion_title"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_light_italic"/>

        <com.ehi.enterprise.android.ui.reservation.widget.ReviewPrepayOrSaveView
            android:id="@+id/prepay_or_save_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_base" />

        <LinearLayout
            android:id="@+id/conversion_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ehi_grey_header_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_base">

                <TextView
                    android:id="@+id/conversion_text"
                    style="@style/TextViewSize16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_base"
                    android:layout_weight="1"
                    android:textColor="@color/ehi_black"
                    android:textStyle="italic"
                    android:fontFamily="@font/source_sans_light_italic"
                    tools:text="@string/car_class_details_transparency_total" />

                <TextView
                    android:id="@+id/conversion_total"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light_italic"
                    tools:text="$100.00" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>