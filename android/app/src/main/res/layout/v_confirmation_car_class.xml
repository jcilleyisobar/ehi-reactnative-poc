<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ConfirmationCarClassViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/section_background"
        android:padding="@dimen/padding_base">

        <TextView
            android:id="@+id/title_text_view"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reservation_review_car_class_section_title"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_bold" />

        <TextView
            android:id="@+id/car_class_type"
            style="@style/TextViewSize28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="Economy" />

        <TextView
            android:id="@+id/car_class_model"
            style="@style/TextViewSize20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="Ford Fiesta or similar" />

        <TextView
            android:id="@+id/car_class_transmission"
            style="@style/TextViewSize20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="@string/class_select_filter_transmission_automatic" />

    </LinearLayout>
</layout>