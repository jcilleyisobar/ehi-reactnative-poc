<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemProfilePaymentViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_base"
            android:layout_marginStart="@dimen/padding_base"
            android:layout_marginTop="@dimen/padding_base"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_profile_payment_view"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="Visa (***1234)" />

            <TextView
                android:id="@+id/preferred_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:drawableStart="@drawable/icon_preferred"
                android:text="@string/profile_preferred_label"
                android:textColor="@color/ehi_primary"
                android:visibility="gone"
                android:fontFamily="@font/source_sans_light"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/item_profile_phone_payment_exp_view"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textColor="@color/ehi_black"
                android:visibility="gone"
                android:fontFamily="@font/source_sans_light"
                tools:text="Expires 06/20"
                tools:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_profile_payment_edit"
                style="@style/TextViewSize16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/profile_payment_options_edit_title"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_light" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/divider_horiz" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_profile_payment_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_delete" />

        </RelativeLayout>

    </LinearLayout>

</layout>
