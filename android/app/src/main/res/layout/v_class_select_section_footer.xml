<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="ClassSelectSectionFooterBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/footer_text_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xsmall"
            android:background="@color/ehi_grey_header_bg"
            android:paddingBottom="@dimen/padding_xsmall"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="@dimen/padding_base">

            <LinearLayout
                android:id="@+id/similar_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_select_make_model_footnote_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_regular"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_cost_asterisks_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/similar_text"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_select_source_currency_footnote_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_regular"/>

            </LinearLayout>

        </RelativeLayout>

        <com.ehi.enterprise.android.ui.reservation.widget.RentalTermsConditionsView
            android:id="@+id/rental_terms_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>