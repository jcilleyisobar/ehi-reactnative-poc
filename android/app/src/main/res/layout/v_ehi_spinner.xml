<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data class="EhiSpinnerViewBinding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background_green_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spinner_selected_text"
            style="@style/TextViewSize18"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/ehi_primary"
            android:fontFamily="@font/source_sans_light"
            tools:text="manual"/>

        <View
            android:layout_width="1dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:background="@color/ehi_primary"/>

        <FrameLayout
            android:layout_width="38dp"
            android:layout_height="52dp"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/spinner_arrow_down"/>
        </FrameLayout>
    </LinearLayout>
</layout>