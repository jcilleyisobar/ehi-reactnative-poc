<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="AdditionalRentalPoliciesViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/cell_title_button"
            layout="@layout/v_key_facts_expandable_cell_title"
            bind:include="@{true}"/>

        <LinearLayout
            android:id="@+id/policies_container"
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subtitle"
                style="@style/TextViewSize18"
                android:fontFamily="@font/source_sans_light"
                android:textColor="@color/ehi_black"
                android:text="@string/key_facts_additional_rental_policies_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</layout>