<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ReviewPaymentModifyUnavailableBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/payment_cannot_modify"
            style="@style/TextViewSize18"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_payment_cant_modify_title"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:background="@color/section_divider" />

        <TextView
            android:id="@+id/terms_and_conditions"
            android:layout_marginLeft="@dimen/padding_base"
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:text="@string/terms_and_conditions_prepay_title"
            android:textColor="@color/ehi_primary"
            android:fontFamily="@font/source_sans_bold" />

    </LinearLayout>

</layout>

