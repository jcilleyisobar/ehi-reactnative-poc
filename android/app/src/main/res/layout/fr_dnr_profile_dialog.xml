<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ProfileDNRDialogFragmentBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_base"
        android:paddingLeft="@dimen/padding_base"
        android:paddingRight="@dimen/padding_base">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_base"
                android:src="@drawable/icon_alert_02" />

            <TextView
                android:id="@+id/fr_modal_dialog_text"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="@string/my_profile_dnr_text"
                android:textColor="@color/ehi_red"
                android:fontFamily="@font/source_sans_light" />

        </LinearLayout>

        <TextView
            android:id="@+id/fr_dnr_dialog_call_us"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_base"
            android:text="@string/locations_empty_query_call_title"
            android:fontFamily="@font/source_sans_bold" />

        <TextView
            android:id="@+id/fr_dnr_dialog_cancel"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_base"
            android:text="@string/alert_cancel_title"
            android:fontFamily="@font/source_sans_bold" />

    </LinearLayout>
</layout>