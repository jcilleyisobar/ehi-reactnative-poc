<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="SettingsFragmentBinding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_header"
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_notifications_section_title"
                android:fontFamily="@font/source_sans_bold"/>

            <LinearLayout
                android:id="@+id/pickup_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_touch_overlay"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="@dimen/settings_standard_row_height"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_xsmall"
                android:paddingTop="@dimen/margin_xsmall">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewSize18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_screen_padding"
                        android:text="@string/settings_item_text_pickup_notification"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <TextView
                        android:id="@+id/pickup_notification_subtitle"
                        style="@style/TextViewSize14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_screen_padding"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"
                        tools:text="1 Hour Before"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>

            </LinearLayout>

            <View
                android:id="@+id/notifications_divider"
                style="@style/HorizontalRule"/>

            <LinearLayout
                android:id="@+id/return_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_touch_overlay"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="@dimen/settings_standard_row_height"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_xsmall"
                android:paddingTop="@dimen/margin_xsmall">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewSize18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_screen_padding"
                        android:text="@string/settings_item_text_return_notification"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <TextView
                        android:id="@+id/return_notification_subtitle"
                        style="@style/TextViewSize14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_screen_padding"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"
                        tools:text="1 Hour Before"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>

            </LinearLayout>

            <View
                android:id="@+id/era_divider"
                style="@style/HorizontalRule"/>

            <com.ehi.enterprise.android.ui.widget.CompoundRowView
                android:id="@+id/era_toggle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                app:compoundViewId="@id/check_box"
                app:textViewId="@+id/era_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/settings_rental_assistant"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_info_01"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/era_text"
                        style="@style/TextViewSize18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:text="@string/notification_settings_rental_assistant_title"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/settings_screen_padding"
                        android:checked="false"/>

                </LinearLayout>

            </com.ehi.enterprise.android.ui.widget.CompoundRowView>

            <TextView
                android:id="@+id/security_header"
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_security_section_title"
                android:fontFamily="@font/source_sans_bold"/>

            <com.ehi.enterprise.android.ui.widget.CompoundRowView
                android:id="@+id/profile_fingerprint_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                app:compoundViewId="@id/check_box"
                app:textViewId="@+id/testing_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_standard_row_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profile_fingerprint_setting_info"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/icon_info_01"/>

                    <TextView
                        style="@style/TextViewSize18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_security_row_fingerprint_title"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/settings_screen_padding"
                        android:checked="false"/>
                </LinearLayout>

            </com.ehi.enterprise.android.ui.widget.CompoundRowView>

            <TextView
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_privacy_section_title"
                android:fontFamily="@font/source_sans_bold"/>

            <com.ehi.enterprise.android.ui.widget.CompoundRowView
                android:id="@+id/tracking_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                app:compoundViewId="@id/check_box"
                app:textViewId="@+id/testing_text">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/settings_screen_padding"
                    android:text="@string/settings_privacy_row_auto_save_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@id/check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:checked="true"/>

            </com.ehi.enterprise.android.ui.widget.CompoundRowView>

            <View
                style="@style/HorizontalRule"
                android:layout_marginBottom="@dimen/margin_xsmall"/>

            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:lineSpacingMultiplier="1.3"
                android:paddingLeft="@dimen/settings_screen_padding"
                android:paddingRight="@dimen/settings_screen_padding"
                android:text="@string/settings_privacy_row_auto_save_detail_title"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"/>

            <View
                style="@style/HorizontalRule"
                android:layout_marginBottom="@dimen/margin_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"/>

            <com.ehi.enterprise.android.ui.widget.CompoundRowView
                android:id="@+id/clear_tracking_analytics"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:paddingLeft="@dimen/settings_question_padding_left"
                android:paddingRight="@dimen/settings_screen_padding"
                app:compoundViewId="@id/check_box"
                app:textViewId="@+id/testing_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/settings_data_collection_info"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_info_01"/>

                    </FrameLayout>

                    <TextView
                        style="@style/TextViewSize18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:text="@string/settings_privacy_row_data_collection_title"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/settings_off"
                        android:textOn="@string/settings_on"/>

                </LinearLayout>

            </com.ehi.enterprise.android.ui.widget.CompoundRowView>

            <View
                style="@style/HorizontalRule"
                android:layout_marginBottom="@dimen/margin_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"/>

            <com.ehi.enterprise.android.ui.widget.CompoundRowView
                android:id="@+id/clear_tracking_search_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:paddingLeft="@dimen/settings_question_padding_left"
                android:paddingRight="@dimen/settings_screen_padding"
                app:compoundViewId="@id/check_box"
                app:textViewId="@+id/testing_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/settings_search_history_info"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_info_01"/>

                    </FrameLayout>

                    <TextView
                        style="@style/TextViewSize18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_weight="1"
                        android:text="@string/settings_privacy_row_save_history_title"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <android.support.v7.widget.SwitchCompat
                        android:id="@id/check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/settings_off"
                        android:textOn="@string/settings_on"/>

                </LinearLayout>

            </com.ehi.enterprise.android.ui.widget.CompoundRowView>

            <View
                style="@style/HorizontalRule"
                android:layout_marginBottom="@dimen/margin_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"/>

            <LinearLayout
                android:id="@+id/use_preferred_credit_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <com.ehi.enterprise.android.ui.widget.CompoundRowView
                    android:id="@+id/use_preferred_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_standard_row_height"
                    android:paddingEnd="@dimen/settings_screen_padding"
                    android:paddingStart="@dimen/settings_question_padding_left"
                    app:compoundViewId="@id/check_box"
                    app:textViewId="@+id/testing_text">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/settings_use_preferred_credit_card"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:clickable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_info_01"/>

                        </FrameLayout>

                        <TextView
                            style="@style/TextViewSize18"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="1"
                            android:text="@string/settings_privacy_use_preferred_card_title"
                            android:textColor="@color/ehi_black"
                            android:fontFamily="@font/source_sans_light"/>

                        <android.support.v7.widget.SwitchCompat
                            android:id="@id/check_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:checked="true"
                            android:showText="true"
                            android:textOff="@string/settings_off"
                            android:textOn="@string/settings_on"/>

                    </LinearLayout>
                </com.ehi.enterprise.android.ui.widget.CompoundRowView>

                <View
                    style="@style/HorizontalRule"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clear_personal_data_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/settings_question_padding_left"
                android:paddingRight="@dimen/settings_screen_padding">

                <FrameLayout
                    android:id="@+id/settings_clear_history_info"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_info_01"/>

                </FrameLayout>

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="@string/settings_privacy_row_clear_data_title"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_light"/>

            </LinearLayout>

            <View
                style="@style/HorizontalRule"
                android:layout_marginBottom="@dimen/margin_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"/>

            <LinearLayout
                android:id="@+id/right_to_be_forgotten_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/settings_question_padding_left"
                android:paddingRight="@dimen/settings_screen_padding">

                <FrameLayout
                    android:id="@+id/right_to_be_forgotten_info"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_info_01"/>

                </FrameLayout>

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="@string/right_to_be_forgotten_title"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_light"/>

            </LinearLayout>


            <TextView
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:text="@string/settings_about_section_title"
                android:fontFamily="@font/source_sans_bold"/>

            <LinearLayout
                android:id="@+id/change_region_area"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:background="@drawable/white_button_touch_overlay"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_xsmall"
                android:paddingTop="@dimen/margin_xsmall">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextViewSize18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_screen_padding"
                        android:text="@string/settings_item_text_country_of_residence"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"/>

                    <TextView
                        android:id="@+id/fr_settings_region_name"
                        style="@style/TextViewSize14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/settings_screen_padding"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_light"
                        tools:text="France"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>

            </LinearLayout>

            <View style="@style/HorizontalRule"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_screen_padding"
                    android:layout_weight="1"
                    android:text="@string/settings_about_row_version_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <TextView
                    android:id="@+id/settings_version_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:text=""
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

            </LinearLayout>

            <View
                style="@style/HorizontalRule"/>

            <LinearLayout
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:background="@drawable/white_button_touch_overlay"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_screen_padding"
                    android:layout_weight="1"
                    android:text="@string/settings_about_row_privacy_policy_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>

            </LinearLayout>

            <View
                style="@style/HorizontalRule"/>

            <LinearLayout
                android:id="@+id/terms_of_use"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:background="@drawable/white_button_touch_overlay"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_screen_padding"
                    android:layout_weight="1"
                    android:text="@string/settings_about_row_terms_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>

            </LinearLayout>

            <View
                style="@style/HorizontalRule"/>

            <LinearLayout
                android:id="@+id/terms_and_conditions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:background="@drawable/white_button_touch_overlay"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_screen_padding"
                    android:layout_weight="1"
                    android:text="@string/terms_and_conditions_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>
            </LinearLayout>

            <View
                style="@style/HorizontalRule"/>


            <LinearLayout
                android:id="@+id/third_party_license"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_standard_row_height"
                android:background="@drawable/white_button_touch_overlay"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_screen_padding"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/settings_about_row_licenses_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/settings_screen_padding"
                    android:src="@drawable/arrow_green"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>