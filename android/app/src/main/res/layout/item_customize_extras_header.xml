    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/padding_base"
        android:paddingRight="@dimen/padding_base"
        android:paddingTop="15dp">

        <TextView
            style="@style/TextViewSize20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/reservation_extras_customize_title"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_bold"/>

    </LinearLayout>
</layout>
