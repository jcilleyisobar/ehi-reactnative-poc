<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ManageReservationViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/green_border_button_overlay"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_large"
                android:src="@drawable/icon_plusbenefits_01" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/GreenBold16Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirmation_manage_reservation_title"
                    android:fontFamily="@font/source_sans_bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/arrow_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_large"
                android:src="@drawable/arrow_green" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_border_background"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/modify_button"
                style="@style/WhiteButtonGreenTextManageReservation"
                android:text="@string/reservation_confirmation_minimal_modify_title"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/cancel_button"
                style="@style/WhiteButtonGreenTextManageReservation"
                android:text="@string/reservation_confirmation_minimal_cancel_title"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/add_to_calendar_button"
                style="@style/WhiteButtonGreenTextManageReservation"
                android:text="@string/confirmation_header_calendar_button_title"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_bold" />

        </LinearLayout>

    </LinearLayout>

</layout>