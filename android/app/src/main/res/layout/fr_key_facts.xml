<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class = "KeyFactsFragmentBinding"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewSize28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_base"
                android:layout_marginRight="@dimen/padding_base"
                android:text="@string/key_facts_header_title"
                android:textColor="@color/ehi_black"
                android:textStyle="bold"
                android:fontFamily="@font/source_sans_bold"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <TextView
                android:text="@string/key_facts_intro_summary"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="@dimen/padding_base"
                android:layout_marginRight="@dimen/padding_base"
                android:textColor="@color/ehi_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <TextView
                android:text="@string/key_facts_intro_rental_agreement"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="@dimen/padding_base"
                android:layout_marginRight="@dimen/padding_base"
                android:textColor="@color/ehi_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <FrameLayout
                android:background="@color/ehi_pressed_gray"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ehi.enterprise.android.ui.reservation.key_facts.widget.DamageLiabilityExpandableCellView
                    android:id="@+id/damage_liabilities"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <com.ehi.enterprise.android.ui.reservation.key_facts.widget.ProtectionProductsCellView
                android:id="@+id/protection_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/ehi_pressed_gray"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <com.ehi.enterprise.android.ui.reservation.key_facts.widget.EquipmentProductsExpandableCellView
                android:id="@+id/equipment_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@color/ehi_pressed_gray"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ehi.enterprise.android.ui.reservation.key_facts.widget.MinimumRequirementsExpandableCellView
                    android:id="@+id/minimum_requirements"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.reservation.key_facts.widget.AdditionalRentalPoliciesExpandableCellView
                    android:id="@+id/additional_policies"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.reservation.key_facts.widget.AdditionalLiabilitiesExpandableCellView
                    android:id="@+id/additional_liabilities"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.reservation.key_facts.widget.DisputeCellView
                    android:id="@+id/disputes"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:background="@color/ehi_black"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="@string/key_facts_rules_of_the_road_traffic_laws"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"/>

            <TextView
                android:id="@+id/rules_of_the_road"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/key_facts_rules_of_the_road_view"
                android:textColor="@drawable/green_gray_pressed_text_color"
                android:textStyle="bold"
                android:fontFamily="@font/source_sans_bold"/>
        </LinearLayout>
    </ScrollView>
</layout>