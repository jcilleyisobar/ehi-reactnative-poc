<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CodeNotAttachedFragmentViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_base"
        tools:context="com.ehi.enterprise.android.ui.activity.ModalDialogActivity">

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_alert_02"
            android:drawablePadding="16dp"
            android:text="@string/info_modal_mismatch_account_title"
            android:textColor="@color/ehi_red"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/info_modal_mismatch_account_details"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            android:id="@+id/close_button"
            style="@style/GreenContinueButton"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/standard_close_button"
            android:fontFamily="@font/source_sans_bold"/>
    </LinearLayout>
</layout>