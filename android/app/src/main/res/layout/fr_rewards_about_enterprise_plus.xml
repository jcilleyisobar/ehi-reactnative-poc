<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="RewardsAboutEnterprisePlusAuthFragmentBinding"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingTop="@dimen/padding_large"
                    android:text="@string/about_e_p_points_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wevemade_icon"/>

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingTop="@dimen/padding_large"
                    android:text="@string/about_e_p_points_detail"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ehi_module_background_fill"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingTop="@dimen/padding_large"
                    android:text="@string/about_e_p_steps_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/earn_icon"/>

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/about_e_p_earn_points_title"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

                <TextView
                    style="@style/TextViewSize20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingLeft="@dimen/padding_base"
                    android:paddingRight="@dimen/padding_base"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/about_e_p_earn_points_detail"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ehi_module_background_fill"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/redeem_icon"/>

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/choose_your_rate_redeem_points_title"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

                <TextView
                    style="@style/TextViewSize20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingLeft="@dimen/padding_base"
                    android:paddingRight="@dimen/padding_base"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/about_e_p_redeem_points_detail"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ehi_module_background_fill"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/transfer_icon"/>

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/about_e_p_transfer_points_title"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

                <TextView
                    style="@style/TextViewSize20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingLeft="@dimen/padding_base"
                    android:paddingRight="@dimen/padding_base"
                    android:paddingTop="@dimen/padding_small"
                    android:text="@string/about_e_p_transfer_points_detail"
                    android:textColor="@color/edit_text_color"
                    android:fontFamily="@font/source_sans_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_small">

                <TextView
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="@dimen/padding_xsmall"
                    android:paddingTop="@dimen/padding_large"
                    android:text="@string/about_e_p_tiers_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tiers_phone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/padding_small"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewSize22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_e_p_tiers_detail_first_line"
                            android:textColor="@color/edit_text_color"
                            android:fontFamily="@font/source_sans_regular"/>

                        <TextView
                            style="@style/TextViewSize22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_e_p_tiers_detail_second_line"
                            android:textColor="@color/edit_text_color"
                            android:fontFamily="@font/source_sans_regular"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/section_header_plus"
                style="@style/SectionHeaderAboutEPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ehi_primary"
                android:text="@string/about_e_p_tier_plus_title"
                android:fontFamily="@font/source_sans_light"/>

            <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                android:id="@+id/plus_tier_requirements_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/section_header_silver"
                style="@style/SectionHeaderAboutEPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rewards_silver_benefits_color"
                android:text="@string/about_e_p_tier_silver_title"
                android:fontFamily="@font/source_sans_light"/>

            <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                android:id="@+id/silver_tier_requirements_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/section_header_gold"
                style="@style/SectionHeaderAboutEPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rewards_gold_benefits_color"
                android:text="@string/about_e_p_tier_gold_title"
                android:fontFamily="@font/source_sans_light"/>

            <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                android:id="@+id/gold_tier_requirements_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/section_header_platinum"
                style="@style/SectionHeaderAboutEPlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ehi_black"
                android:text="@string/about_e_p_tier_platinum_title"
                android:fontFamily="@font/source_sans_light"/>

            <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                android:id="@+id/platinum_tier_requirements_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_base"
                android:background="@color/ehi_dark_rule"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/section_divider"/>


            <LinearLayout
                android:id="@+id/terms_and_conditions_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/ehi_table_cell_color"
                android:orientation="horizontal"
                android:padding="@dimen/padding_base">

                <TextView
                    android:id="@+id/terms_and_condition_text_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/eu_terms_screen_title"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_smgreen"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/section_divider"/>

            <TextView
                android:id="@+id/legalCopyText"
                android:padding="@dimen/padding_small"
                style="@style/TextViewSize16"
                android:textColor="@color/edit_text_color"
                android:fontFamily="@font/source_sans_regular"
                android:background="@color/ehi_module_background_fill"
                android:text="@string/rewards_legal_points_long_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</layout>