<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="LookupRentalFragmentBinding">

        <import type="com.ehi.enterprise.android.utils.databinding.adapter.AppAdapters.SymbolPosition" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/error_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@color/lookup_rental_error_background"
                android:orientation="vertical"
                android:padding="@dimen/padding_base"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/error_alert_text"
                    style="@style/TextViewSize16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_alert_02"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/source_sans_light"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/rentals_fallback_lookup_text"
                    android:textColor="@color/ehi_red" />

                <TextView
                    style="@style/TextViewSize16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/source_sans_light"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/rentals_fallback_helper_text"
                    android:textColor="@color/ehi_black" />

                <TextView
                    android:id="@+id/contact_us_button"
                    style="@style/TextViewSize16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/lookup_rental_error_message_contact_button"
                    android:drawableLeft="@drawable/icon_phone_02"
                    android:fontFamily="@font/source_sans_bold"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/rentals_footer_contact_button_text"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_primary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_base"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    style="@style/TextViewSize12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom='@dimen/padding_base'
                    android:fontFamily="@font/source_sans_light_italic"
                    android:text="@string/gdpr_look_up_rental"
                    android:textColor="@color/ehi_gray"
                    app:requiredField="@{SymbolPosition.BEFORE}" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_bold"
                        android:text="@string/rentals_lookup_confirmation_number_title"
                        android:textAllCaps="true"
                        android:textColor="@color/ehi_black"
                        app:requiredField="@{SymbolPosition.AFTER}" />

                    <TextView
                        android:id="@+id/forgot_confirmation_number"
                        style="@style/TextViewSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:fontFamily="@font/source_sans_bold"
                        android:text="@string/rentals_lookup_cantfind"
                        android:textColor="@color/ehi_primary" />


                </LinearLayout>

                <!--textVisiblePassword is required because some IME don't respect textNoSuggestions-->
                <EditText
                    android:id="@+id/confirmation_number_input"
                    style="@style/InputField"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/source_sans_light"
                    android:inputType="textNoSuggestions|textVisiblePassword" />

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_base"
                    android:fontFamily="@font/source_sans_bold"
                    android:text="@string/rentals_lookup_first_name_title"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_black"
                    app:requiredField="@{SymbolPosition.AFTER}" />

                <EditText
                    android:id="@+id/first_name_input"
                    style="@style/InputField"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_base"
                    android:fontFamily="@font/source_sans_bold"
                    android:text="@string/rentals_lookup_last_name_title"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_black"
                    app:requiredField="@{SymbolPosition.AFTER}" />

                <EditText
                    android:id="@+id/last_name_input"
                    style="@style/InputField"
                    android:layout_marginTop="@dimen/margin_small"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    android:id="@+id/find_rental_button"
                    style="@style/GreenButtonTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_base"
                    android:fontFamily="@font/source_sans_bold"
                    android:gravity="center"
                    android:minHeight="52dp"
                    android:text="@string/rentals_lookup_find_button_title"
                    android:textColor="@drawable/button_inactive_white" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>