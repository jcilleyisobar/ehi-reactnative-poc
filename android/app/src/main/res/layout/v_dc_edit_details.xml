<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="EditDCDetailsViewBinding">

        <import type="com.ehi.enterprise.android.utils.databinding.adapter.AppAdapters.SymbolPosition" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewSize12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin='@dimen/padding_base'
            android:fontFamily="@font/source_sans_light_italic"
            android:text="@string/gdpr_res_flow"
            android:textColor="@color/ehi_gray"
            app:requiredField="@{SymbolPosition.BEFORE}" />

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_bold"
            android:text="@string/delivery_collection_street_field_title"
            android:textAllCaps="true"
            android:textColor="@color/ehi_black"
            app:requiredField="@{SymbolPosition.AFTER}" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/street_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/street_address"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_transparent_dark_border"
                android:fontFamily="@font/source_sans_light"
                android:hint="@string/delivery_collection_street_field_delivery_placeholder"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/street_address_second_line"
            style="@style/InputField"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/padding_base"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_light"
            android:singleLine="true" />

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_bold"
            android:text="@string/delivery_collection_city_field_title"
            android:textAllCaps="true"
            android:textColor="@color/ehi_black"
            app:requiredField="@{SymbolPosition.AFTER}" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/city"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_transparent_dark_border"
                android:fontFamily="@font/source_sans_light"
                android:hint="@string/delivery_collection_city_field_placeholder"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_bold"
            android:text="@string/delivery_collection_postal_field_title"
            android:textAllCaps="true"
            android:textColor="@color/ehi_black"
            app:requiredField="@{SymbolPosition.AFTER}" />

        <EditText
            android:id="@+id/zip"
            style="@style/InputField"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/padding_base"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_light"
            android:hint="@string/delivery_collection_postal_field_placeholder"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_bold"
            android:text="@string/delivery_collection_phone_field_title"
            android:textAllCaps="true"
            android:textColor="@color/ehi_black"
            app:requiredField="@{SymbolPosition.AFTER}" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/phone"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_transparent_dark_border"
                android:fontFamily="@font/source_sans_light"
                android:hint="@string/delivery_collection_phone_field_placeholder"
                android:inputType="number|phone"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/TextViewSize14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_bold"
            android:text="@string/delivery_collection_comment_field_title"
            android:textAllCaps="true"
            android:textColor="@color/ehi_black" />

        <EditText
            android:id="@+id/comment"
            style="@style/InputField"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/padding_base"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:fontFamily="@font/source_sans_light"
            android:gravity="top"
            android:hint="@string/delivery_collection_comments_field_placeholder"
            android:lines="4"
            android:maxEms="200"
            android:maxLines="4"
            android:singleLine="false" />

    </LinearLayout>
</layout>