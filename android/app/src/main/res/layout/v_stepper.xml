<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="StepperViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_base"
        android:paddingRight="@dimen/padding_base">

        <ImageButton
            android:id="@+id/minus_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/green_button_touch_overlay"
            android:src="@drawable/icon_redemption_minus"/>

        <TextView
            android:id="@+id/text"
            style="@style/TextViewSize24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/location_details_background"
            android:gravity="center"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="Days: 3"/>

        <ImageButton
            android:id="@+id/plus_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/green_button_touch_overlay"
            android:src="@drawable/icon_redemption_plus"/>
    </LinearLayout>
</layout>
