<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="RewardsAboutTierBenefitsFragmentBinding"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ehi.enterprise.android.ui.rewards.widget.AboutTierHeaderView
                android:id="@+id/rewards_about_tier_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview
                android:id="@+id/plus_tier"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderContentView
                    android:id="@+id/plus_tier_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                    android:id="@+id/plus_tier_requirements_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview>

            <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview
                android:id="@+id/silver_tier"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderContentView
                    android:id="@+id/silver_tier_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                    android:id="@+id/silver_tier_requirements_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview>

            <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview
                android:id="@+id/gold_tier"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderContentView
                    android:id="@+id/gold_tier_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                    android:id="@+id/gold_tier_requirements_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview>

            <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview
                android:id="@+id/platinum_tier"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderContentView
                    android:id="@+id/platinum_tier_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.ehi.enterprise.android.ui.rewards.widget.TierRequirementsView
                    android:id="@+id/platinum_tier_requirements_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.ehi.enterprise.android.ui.rewards.widget.ExpandingHeaderview>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_base"
                android:background="@color/ehi_dark_rule"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/section_divider"/>

            <LinearLayout
                android:id="@+id/terms_and_conditions_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ehi_table_cell_color"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_base">

                <TextView
                    android:id="@+id/terms_and_condition_text_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/rewards_welcome_enterprise_plus_program_details"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_smgreen"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/section_divider"/>

            <TextView
                android:id="@+id/legalCopyText"
                android:padding="@dimen/padding_small"
                style="@style/TextViewSize16"
                android:textColor="@color/edit_text_color"
                android:fontFamily="@font/source_sans_regular"
                android:background="@color/ehi_module_background_fill"
                android:text="@string/rewards_legal_points_long_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</layout>