<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SendSurveyDialogFragmentBinding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_base"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_base"
                android:src="@drawable/foresee"/>

            <TextView
                android:id="@+id/title"
                style="@style/TextViewSize26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_base"
                android:layout_marginTop="@dimen/padding_base"
                android:text="@string/survey_greetings_message"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"/>

            <TextView
                android:id="@+id/description"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_base"
                android:text="@string/survey_instructions_message"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:labelFor="@+id/email_or_phone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email_or_phone_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_base"
                    android:text="@string/survey_contact_input_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold"/>

                <TextView
                    android:id="@+id/text_message_view"
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_base"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/survey_contact_input_title_details"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"/>
            </LinearLayout>

            <EditText
                android:id="@+id/email_or_phone"
                style="@style/InputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/source_sans_light"/>

            <com.ehi.enterprise.android.ui.widget.DisabledClickButton
                android:id="@+id/send_button"
                style="@style/GreenContinueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/survey_send_survey_button_title"
                android:fontFamily="@font/source_sans_bold"/>

            <TextView
                android:id="@+id/privacy_policy"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_base"
                android:layout_marginTop="@dimen/padding_base"
                android:text="@string/survey_foresee_policy_button_title"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_bold"/>

        </LinearLayout>
    </ScrollView>
</layout>