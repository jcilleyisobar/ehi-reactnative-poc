<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ConfirmationLocationDetailsViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_base">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text_view"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rental_section_title_pickup_location"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_favorites_03" />

                <TextView
                    android:id="@+id/name_text_view"
                    style="@style/TextViewSize28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="Millennium Park" />
            </LinearLayout>

            <TextView
                android:id="@+id/address_text_view"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="***no_data***"
                android:textColor="@color/ehi_black"
                android:textIsSelectable="true"
                android:fontFamily="@font/source_sans_light"
                app:shareText="@{true}"
                tools:text="20 E. Randolph St., Chicago, IL 60608 " />

            <TextView
                android:id="@+id/phone_text_view"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_light"
                tools:text="312-251-0200" />

        </LinearLayout>

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_green"/>-->

    </LinearLayout>
</layout>