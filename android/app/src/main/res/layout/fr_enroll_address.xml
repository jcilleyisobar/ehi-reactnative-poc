<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="EnrollAddressFragmentBinding" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/step_text_view"
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_base"
                    android:layout_marginLeft="@dimen/padding_base"
                    android:layout_marginTop="@dimen/padding_base"
                    android:layout_marginBottom="-30dp"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="@string/enroll_step" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/enroll_match" />

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_base"
                    android:layout_marginRight="@dimen/padding_base"
                    android:paddingBottom="@dimen/padding_large"
                    android:text="@string/enroll_keep_this_address"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_regular" />

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_base"
                    android:layout_marginRight="@dimen/padding_base"
                    android:text="@string/enroll_current_address"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold" />

                <EditText
                    android:id="@+id/address_text_view"
                    style="@style/InputField"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_margin="@dimen/padding_base"
                    android:fontFamily="@font/source_sans_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/change_button"
                        style="@style/GreenContinueButton"
                        android:layout_margin="@dimen/padding_base"
                        android:text="@string/enroll_step_2_match_address_change_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_bold" />

                    <TextView
                        android:id="@+id/keep_button"
                        style="@style/GreenContinueButton"
                        android:layout_margin="@dimen/padding_base"
                        android:text="@string/enroll_step_2_match_address_keep_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/source_sans_bold" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</layout>