<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="RentalSectionViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/section_header_background"
            android:paddingBottom="@dimen/padding_xsmall"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="@dimen/padding_xsmall"
            android:text="@string/rental_section_title_rental"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_bold" />


        <com.ehi.enterprise.android.ui.widget.InfoBannerView
            android:id="@+id/info_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />
        
        <com.ehi.enterprise.android.ui.widget.BannerView
            android:id="@+id/ec_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.ehi.enterprise.android.ui.widget.EmailNotificationBannerView
            android:id="@+id/third_part_email_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.ehi.enterprise.android.ui.reservation.widget.ReviewLocationsView
            android:id="@+id/review_locations_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.confirmation.widgets.ConfirmationLocationsView
            android:id="@+id/confirmation_locations_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ehi.enterprise.android.ui.reservation.widget.ReviewDateTimeView
                android:id="@+id/pickup_date_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:pickupReturnCellTitle="@string/reservation_pickup_date_cell_title" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/section_divider" />

            <com.ehi.enterprise.android.ui.reservation.widget.ReviewDateTimeView
                android:id="@+id/return_date_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:pickupReturnCellTitle="@string/reservation_return_date_cell_title" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/section_divider" />

        <com.ehi.enterprise.android.ui.reservation.widget.ReviewCarClassView
            android:id="@+id/review_car_class_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.confirmation.widgets.ConfirmationCarClassView
            android:id="@+id/confirmation_car_class_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.reservation.widget.ReviewExtrasView
            android:id="@+id/review_extras_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>