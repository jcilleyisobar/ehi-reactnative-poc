<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="LocationFilterReadOnlyComponentViewBinding"></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pickup_title_text_view"
                android:layout_marginTop="5dp"
                style="@style/TextViewSize16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="pickup"
                android:fontFamily="@font/source_sans_bold" />

            <TextView
                android:id="@+id/dropoff_title_text_view"
                style="@style/TextViewSize16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:maxLines="1"
                tools:text="dropoff:"
                android:fontFamily="@font/source_sans_bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pickup_date_text_view"
                style="@style/GreenBold20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="jul 10"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/source_sans_light" />

            <TextView
                android:id="@+id/dropoff_date_text_view"
                style="@style/GreenBold20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="jul 10"
                android:fontFamily="@font/source_sans_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/pickup_separator_view"
                android:layout_width="1dp"
                android:layout_marginBottom="3dp"
                android:layout_height="15dp"
                android:background="@color/ehi_gray" />

            <View
                android:id="@+id/dropoff_separator_view"
                android:layout_width="1dp"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_height="15dp"
                android:background="@color/ehi_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pickup_time_text_view"
                style="@style/GreenBold20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                tools:text="12:00"
                android:fontFamily="@font/source_sans_light" />

            <TextView
                android:id="@+id/dropoff_time_text_view"
                style="@style/GreenBold20Text"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="12:00"
                android:fontFamily="@font/source_sans_light" />
        </LinearLayout>

    </LinearLayout>

</layout>