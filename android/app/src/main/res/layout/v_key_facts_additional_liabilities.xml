<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="AdditionalLiabilitiesViewBinding"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/cell_title_button"
            layout="@layout/v_key_facts_expandable_cell_title"
            bind:include="@{true}"/>

        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/source_sans_light"
                android:text="@string/key_facts_additional_rental_policies_subtitle"
                android:textColor="@color/ehi_black"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.widget.BulletedTextView
                app:bulletedTextColor="@color/ehi_black"
                app:bulletedText="@string/key_facts_additional_liabilities_modification_charges"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.widget.BulletedTextView
                app:bulletedTextColor="@color/ehi_black"
                app:bulletedText="@string/key_facts_additional_liabilities_damage_theft"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.widget.BulletedTextView
                app:bulletedTextColor="@color/ehi_black"
                app:bulletedText="@string/key_facts_additional_liabilities_fines_penalty_charges"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.widget.BulletedTextView
                app:bulletedTextColor="@color/ehi_black"
                app:bulletedText="@string/key_facts_additional_liabilities_legal_fees"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.widget.BulletedTextView
                app:bulletedTextColor="@color/ehi_black"
                app:bulletedText="@string/key_facts_additional_liabilities_collection_fee"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.widget.BulletedTextView
                app:bulletedTextColor="@color/ehi_black"
                app:bulletedText="@string/key_facts_additional_liabilities_cleaning_fee"
                android:fontFamily="@font/source_sans_light"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/source_sans_light"
                android:textColor="@color/ehi_black"
                android:text="@string/key_facts_additional_liabilities_rental_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</layout>