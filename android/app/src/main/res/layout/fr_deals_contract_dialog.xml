<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="DealsContractDialogViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_base"
        android:paddingLeft="@dimen/padding_base"
        android:paddingRight="@dimen/padding_base">

        <TextView
            style="@style/TextViewSize26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/deals_contract_combination_dialog_title"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_base"
            android:text="@string/deals_contract_combination_dialog_text"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            android:id="@+id/yes_button"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/standard_button_yes"
            android:fontFamily="@font/source_sans_bold"/>

        <TextView
            android:id="@+id/no_button"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deals_contract_combination_dialog_no_button"
            android:fontFamily="@font/source_sans_bold"/>

    </LinearLayout>
</layout>