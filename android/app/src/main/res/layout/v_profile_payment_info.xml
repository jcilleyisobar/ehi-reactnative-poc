<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ProfilePaymentInfoBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/billing_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_background"
            android:orientation="vertical"
            android:padding="@dimen/padding_base">

            <TextView
                style="@style/ProfileHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_payment_billing_numbers_header"
                android:fontFamily="@font/source_sans_bold" />

            <LinearLayout
                android:id="@+id/billing_code_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/transparent_small_divider"
                android:orientation="vertical"
                android:showDividers="middle" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/credit_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_background"
            android:orientation="vertical"
            android:padding="@dimen/padding_base">

            <TextView
                android:id="@+id/credit_card_header"
                style="@style/ProfileHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_payment_credit_cards_header"
                android:fontFamily="@font/source_sans_bold" />

            <LinearLayout
                android:id="@+id/credit_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_base"
                android:divider="@drawable/transparent_small_divider"
                android:orientation="vertical"
                android:showDividers="middle" />

            <LinearLayout
                android:id="@+id/warning_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_base"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/warning_view_title"
                    style="@style/ProfileHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_payment_options_max_credit_card_title"
                    android:fontFamily="@font/source_sans_bold" />

                <TextView
                    android:id="@+id/warning_view_text"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="@string/profile_payment_options_max_credit_card_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_credit_card"
                style="@style/GreenBorderWhiteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_add_credit_card_button"
                android:visibility="gone"
                android:fontFamily="@font/source_sans_bold"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</layout>