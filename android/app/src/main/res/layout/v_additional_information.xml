<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="AdditionalInformationViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/information_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:layout_marginTop="@dimen/padding_base"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reservation_confirmation_assistance_section_title"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_bold" />

            <ImageView
                android:id="@+id/arrow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/arrow_green"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_toLeftOf="@id/arrow_image"
                android:orientation="vertical"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/additional_info_enum_text"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:layout_marginTop="@dimen/margin_large"
            android:textColor="@color/ehi_black"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_light"
            tools:text="Add your Employee ID, Requisition Number, and Department Service." />

        <TextView
            android:id="@+id/add_information_button"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:clickable="false"
            android:duplicateParentState="true"
            android:text="@string/additional_info_add_information_button"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/padding_base"
            android:background="@color/location_info_window_divider_grey" />
    </LinearLayout>
</layout>
