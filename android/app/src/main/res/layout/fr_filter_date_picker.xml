<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="FilterDatePickerViewBinding" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/sub_header_text_view"
            style="@style/TextViewSize22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_weight="1"
            android:background="@color/ehi_primary_dark"
            android:gravity="left|center_vertical"
            android:minHeight="@dimen/date_selector_cell_height"
            android:paddingLeft="@dimen/padding_base"
            android:text="@string/reservation_scheduler_pickup_date_callout"
            android:textColor="@color/white"
            android:fontFamily="@font/source_sans_light"
            tools:ignore="RtlSymmetry"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/calendar_view"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendar_view"
            android:layout_width="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_height="0dp"
            app:dayBackground="@drawable/calendar_day_background"
            app:dayTextColor="@drawable/calendar_day_text"
            app:dividerColor="@android:color/transparent"
            app:headerTextColor="@color/ehi_black"
            app:titleTextColor="@color/ehi_black"
            app:layout_constraintBottom_toTopOf="@+id/continue_button"
            app:layout_constraintTop_toBottomOf="@+id/sub_header_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/invalid_dates_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bg_rounded_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_medium"
            android:paddingLeft="@dimen/margin_xlarge"
            android:paddingRight="@dimen/margin_xlarge"
            android:paddingTop="@dimen/margin_medium"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white_grey"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/continue_button"
            app:layout_constraintLeft_toLeftOf="@+id/calendar_view"
            app:layout_constraintRight_toRightOf="@+id/calendar_view"
            android:fontFamily="@font/source_sans_light"/>

        <FrameLayout
            android:id="@+id/fr_date_picker_pickup_triangle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_green_triangle"
            android:rotation="180"
            app:layout_constraintTop_toTopOf="@id/calendar_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/continue_button"
            app:layout_constraintVertical_weight="1"
            style="@style/GreenContinueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/time_picker_button_title"
            android:textColor="@drawable/button_inactive_white"
            android:fontFamily="@font/source_sans_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_view" />

    </android.support.constraint.ConstraintLayout>
</layout>
