<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class = "LocationFilterViewBinding"> </data>

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_details_days_section_title"
            android:id="@+id/header_text_view"
            style="@style/TextViewSize18"
            android:background="@color/ehi_grey_header_bg"
            android:paddingStart="@dimen/padding_base"
            android:paddingTop="@dimen/margin_medium"
            android:paddingBottom="@dimen/margin_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/source_sans_bold"
            android:textColor="@color/ehi_black"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/pickup_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewSize18"
            android:text="@string/locations_map_return_label"
            android:fontFamily="@font/source_sans_bold"
            app:layout_constraintLeft_toLeftOf="@+id/return_date_filter"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintTop_toBottomOf="@+id/header_text_view" />

        <TextView
            android:id="@+id/return_text_view"
            android:text="@string/locations_map_pickup_label"
            android:fontFamily="@font/source_sans_bold"
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintLeft_toLeftOf="@+id/start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/header_text_view"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_guideline"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="20dp" />

        <com.ehi.enterprise.android.ui.location.widgets.components.FilterComponentView
            android:id="@+id/pickup_date_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="@+id/start_guideline"
            app:layout_constraintRight_toLeftOf="@+id/return_date_filter"
            app:layout_constraintTop_toBottomOf="@+id/return_text_view" />

        <com.ehi.enterprise.android.ui.location.widgets.components.FilterComponentView
            android:id="@+id/pickup_time_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="@+id/pickup_date_filter"
            app:layout_constraintRight_toRightOf="@+id/pickup_date_filter"
            app:layout_constraintTop_toBottomOf="@+id/pickup_date_filter" />

        <com.ehi.enterprise.android.ui.location.widgets.components.FilterComponentView
            android:id="@+id/return_date_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toRightOf="@+id/pickup_date_filter"
            app:layout_constraintRight_toLeftOf="@+id/end_guideline"
            app:layout_constraintTop_toBottomOf="@+id/pickup_text_view" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_guideline"
            app:layout_constraintGuide_end="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="364dp" />

        <com.ehi.enterprise.android.ui.location.widgets.components.FilterComponentView
            android:id="@+id/return_time_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="@+id/return_date_filter"
            app:layout_constraintRight_toRightOf="@+id/return_date_filter"
            app:layout_constraintTop_toBottomOf="@+id/return_date_filter">

        </com.ehi.enterprise.android.ui.location.widgets.components.FilterComponentView>

    </android.support.constraint.ConstraintLayout>
</layout>
