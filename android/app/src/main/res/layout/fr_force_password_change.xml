<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class = "ChangePasswordBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <TextView
            style="@style/TextViewSize22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/cp_your_password_is_outdated"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_regular"/>

        <TextView
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/cp_our_requirements_have_been_changed"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            style="@style/GreenButtonTextView"
            android:fontFamily="@font/source_sans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/okay_button"
            android:text="@string/alert_okay_title"/>

        <TextView
            style="@style/GreenButtonTextView"
            android:fontFamily="@font/source_sans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:id="@+id/cancel_button"
            android:text="@string/alert_cancel_title"/>

    </LinearLayout>
</layout>