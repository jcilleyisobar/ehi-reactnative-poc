<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ReviewPrepayOrSaveViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="@dimen/padding_base"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/or_save_if_pay_now"
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/padding_base"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:textColor="@color/ehi_primary"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_regular"
            tools:text="Or, Save $100.00 if you pay now" />

        <TextView
            android:id="@+id/or_save_if_pay_later"
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/padding_base"
            android:layout_marginEnd="5dp"
            android:textColor="@color/ehi_primary"
            android:fontFamily="@font/source_sans_regular"
            tools:text="Or, pay later for $100.00" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginEnd="@dimen/padding_base"
            android:layout_marginTop="3dp"
            android:src="@drawable/arrow_green" />

    </LinearLayout>

</layout>