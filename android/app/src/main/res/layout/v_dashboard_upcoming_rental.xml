<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="DashboardUpcomingRentalBinding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upcoming_rental_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="190dp"
                android:paddingTop="24dp">

                <TextView
                    style="@style/UpcomingRentalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_upcoming_rental_cell_title_upcoming"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_black"
                    android:textStyle="bold"
                    android:fontFamily="@font/source_sans_black"/>

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/dashboard_upcoming_rental_cell_confirmation_title"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_black"
                    android:textStyle="bold"
                    android:fontFamily="@font/source_sans_bold"/>

                <TextView
                    android:id="@+id/confirmation_number"
                    style="@style/UpcomingRentalConfirmationNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="#2456W1234"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/location_info_window_divider_grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/status_message"
                        style="@style/TextViewSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/ehi_black"
                        android:textStyle="bold"
                        android:fontFamily="@font/source_sans_bold"
                        tools:text="See you tomorrow"/>

                    <TextView
                        android:id="@+id/view_details_button"
                        style="@style/TextViewSize14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/dashboard_upcoming_rental_cell_view_details_title"
                        android:textAllCaps="true"
                        android:textColor="@color/ehi_primary"
                        android:textStyle="bold"
                        android:fontFamily="@font/source_sans_bold"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/arrow_green"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/location_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/rental_pickup_location"
                        style="@style/TextViewSize24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/ehi_primary"
                        android:fontFamily="@font/source_sans_regular"
                        tools:text="Chicago O'Hare Airport"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/rental_pickup_date_time"
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="May 20, 2015 at 12:00 PM"/>

            </LinearLayout>

            <TextView
                android:id="@+id/get_directions_button"
                style="@style/GreenBorderWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/ehi_primary"
                android:drawableLeft="@drawable/icon_directions_04"
                android:enabled="true"
                android:paddingLeft="16dp"
                android:paddingRight="45dp"
                android:text="@string/dashboard_upcoming_rental_cell_get_directions_title"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/upcoming_rental_direction_from_terminal"
                style="@style/GreenBorderWhiteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/terminal_directions_01"
                android:enabled="true"
                android:paddingLeft="16dp"
                android:paddingRight="45dp"
                android:text="@string/terminal_directions_header_title"
                android:visibility="gone"
                android:fontFamily="@font/source_sans_light"
                tools:visibility="visible"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/vehicle_image"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="-55dp"
            android:layout_marginTop="-22dp"
            android:paddingBottom="75dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/eapp_icon"
            tools:visibility="gone"/>

    </RelativeLayout>
</layout>
