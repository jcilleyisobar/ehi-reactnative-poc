<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="MyRentalsFooterItemBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashboard_upcoming_rentals_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_base"
        android:paddingRight="@dimen/padding_base"
        android:paddingTop="@dimen/padding_base">

        <TextView
            android:id="@+id/prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_base"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light" />

        <TextView
            android:id="@+id/button"
            style="@style/TextViewSize16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_background_green_border"
            android:gravity="center"
            android:minHeight="50dp"
            android:padding="12dp"
            android:textAllCaps="true"
            android:textColor="@color/ehi_primary"
            android:textStyle="bold"
            android:fontFamily="@font/source_sans_bold" />

        <View
            android:id="@+id/bottom_spacer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_base" />

    </LinearLayout>
</layout>
