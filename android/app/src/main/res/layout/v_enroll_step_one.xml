<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="EnrollStepOneViewBinding">

        <import type="com.ehi.enterprise.android.utils.databinding.adapter.AppAdapters.SymbolPosition" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/enroll_step_title_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/section_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/review_section_divider_margin"
                android:background="@color/ehi_grey_header_bg" />

            <TextView
                android:id="@+id/enroll_step_title"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/section_header_background"
                android:fontFamily="@font/source_sans_bold"
                android:paddingBottom="@dimen/padding_xsmall"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="@dimen/padding_xsmall"
                android:textColor="@color/ehi_black"
                tools:text="STEP 1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step_one_form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_base"
            android:paddingStart="@dimen/padding_base"
            android:paddingTop="@dimen/padding_large">

            <TextView
                style="@style/TextViewSize12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:layout_marginTop="@dimen/margin_small"
                android:fontFamily="@font/source_sans_light_italic"
                android:text="@string/gdpr_enroll"
                android:textColor="@color/ehi_gray"
                app:requiredField="@{SymbolPosition.BEFORE}" />



            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_bold"
                android:labelFor="@id/first_name"
                android:text="@string/enroll_first_name"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/first_name"
                    style="@style/InputField"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:fontFamily="@font/source_sans_light"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    app:sensitiveInformation="@{true}" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_bold"
                android:labelFor="@id/last_name"
                android:text="@string/enroll_last_name"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/last_name"
                    style="@style/InputField"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:fontFamily="@font/source_sans_light"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName|textCapWords"
                    app:sensitiveInformation="@{true}" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_xsmall"
                android:fontFamily="@font/source_sans_bold"
                android:text="@string/enroll_license_issued_by"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_input_height"
                android:background="@drawable/edit_text_white_border"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/country"
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/source_sans_light"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/search_input_height"
                    android:paddingStart="@dimen/padding_base"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    tools:text="USA" />

                <ImageView
                    android:layout_width="@dimen/search_input_height"
                    android:layout_height="@dimen/search_input_height"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/edit_text_green_border"
                    android:rotation="90"
                    android:scaleType="center"
                    android:src="@drawable/arrow_green" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/subdivision_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:fontFamily="@font/source_sans_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_input_height"
                    android:background="@drawable/edit_text_white_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/subdivision"
                        style="@style/TextViewSize18"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/source_sans_light"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/search_input_height"
                        android:paddingStart="@dimen/padding_base"
                        android:singleLine="true"
                        android:textColor="@color/ehi_black"
                        tools:text="California" />

                    <ImageView
                        android:layout_width="@dimen/search_input_height"
                        android:layout_height="@dimen/search_input_height"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/edit_text_green_border"
                        android:rotation="90"
                        android:scaleType="center"
                        android:src="@drawable/arrow_green" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_xlarge"
                android:fontFamily="@font/source_sans_bold"
                android:labelFor="@id/driver_license"
                android:text="@string/enroll_license_number"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/driver_license_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/driver_license"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:fontFamily="@font/source_sans_light"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    app:sensitiveInformation="@{true}"
                    tools:text="****************3254" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/issue_date_title"
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_bold"
                android:labelFor="@id/expiration_date"
                android:text="@string/profile_license_issue_date"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/issue_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/issue_date"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_input_height"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:focusable="false"
                    android:fontFamily="@font/source_sans_light"
                    android:gravity="center_vertical"
                    android:inputType="date"
                    android:paddingEnd="@dimen/search_input_height"
                    android:paddingStart="@dimen/padding_base"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    app:cleanable="@{true}"
                    tools:text="05/23/2018" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/expiration_date_title"
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_bold"
                android:labelFor="@id/expiration_date"
                android:text="@string/enroll_expiration_date"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/expiration_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/expiration_date"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_input_height"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:focusable="false"
                    android:fontFamily="@font/source_sans_light"
                    android:gravity="center_vertical"
                    android:inputType="date"
                    android:paddingEnd="@dimen/search_input_height"
                    android:paddingStart="@dimen/padding_base"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    app:cleanable="@{true}"
                    tools:text="05/23/2018" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_sans_bold"
                android:text="@string/enroll_birth"
                android:textAllCaps="true"
                android:textColor="@color/ehi_black"
                app:requiredField="@{SymbolPosition.AFTER}" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/birth_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true">

                <EditText
                    android:id="@+id/birth_date"
                    style="@style/InputField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/search_input_height"
                    android:background="@drawable/edit_text_transparent_dark_border"
                    android:focusable="false"
                    android:fontFamily="@font/source_sans_light"
                    android:gravity="center_vertical"
                    android:inputType="date"
                    android:paddingEnd="@dimen/search_input_height"
                    android:paddingStart="@dimen/padding_base"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    app:cleanable="@{true}"
                    tools:text="05/23/2018" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
