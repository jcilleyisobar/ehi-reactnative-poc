<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CollapsibleViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_base">

            <ImageView
                android:id="@+id/main_toggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="90"
                android:src="@drawable/arrow_green" />

            <TextView
                android:id="@+id/main_title"
                style="@style/TextViewSize22"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="Rental" />

            <TextView
                android:id="@+id/main_subtitle"
                style="@style/TextViewSize22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="$140.12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_background"
            android:divider="@drawable/white_divider"
            android:orientation="vertical"
            android:padding="@dimen/padding_base"
            android:showDividers="middle" />
    </LinearLayout>

</layout>