<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ConfirmationHeaderViewBinding" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:layout_marginTop="-24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/ehi_table_cell_color"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_base">

                    <TextView
                        android:id="@+id/you_are_all_set_text_view"
                        style="@style/TextViewSize26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirmation_header_title_first_line"
                        android:textAllCaps="true"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_black" />

                    <TextView
                        style="@style/TextViewSize14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirmation_header_confirmation_number_title"
                        android:textAllCaps="true"
                        android:textColor="@color/ehi_black"
                        android:fontFamily="@font/source_sans_bold" />

                    <TextView
                        android:id="@+id/confirmation_number_text_view"
                        style="@style/TextViewSize24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/ehi_black"
                        android:textIsSelectable="true"
                        android:fontFamily="@font/source_sans_light"
                        app:shareText="@{true}"
                        tools:text="#123456789" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/car_image_view"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
        </FrameLayout>
    </FrameLayout>
</layout>