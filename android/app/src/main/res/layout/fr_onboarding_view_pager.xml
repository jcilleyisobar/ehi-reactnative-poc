<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="OnboradingViewPagerFragmentBinding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
        </android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/car_image"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/eplus_image"
            android:layout_width="wrap_content"
            android:paddingTop="35dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eplus_logo_01"/>

        <com.ehi.enterprise.android.ui.widget.ViewPagerIndicator
            android:id="@+id/view_pager_indicator"
            android:layout_marginTop="@dimen/padding_base"
            android:layout_below="@+id/car_image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</layout>