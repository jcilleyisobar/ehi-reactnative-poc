<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ReviewCarClassViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/car_change_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base">

            <ImageView
                android:id="@+id/car_class_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/class_title_price_container"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="-20dp"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerInside"
                tools:src="@drawable/dashboard_image_01" />


            <TextView
                android:id="@+id/car_transmission_text"
                style="@style/TextViewSize20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/car_class_image"
                android:paddingBottom="10dp"
                android:drawablePadding="@dimen/padding_xxsmall"
                android:textColor="@color/ehi_black"
                android:visibility="visible"
                android:fontFamily="@font/source_sans_light"
                tools:text="Automatic"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/class_title_price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_background_car_select"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_class_type"
                    style="@style/TextViewSize28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="Economy" />

                <TextView
                    android:id="@+id/car_model_text"
                    style="@style/TextViewSize20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="Automatic" />

            </LinearLayout>

            <ImageView
                android:id="@+id/car_change_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_green" />

        </RelativeLayout>

        <com.ehi.enterprise.android.ui.widget.ArrowViewGroup
            android:id="@+id/arrow_viewgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/section_header_background"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_base"
            android:paddingTop="@dimen/upgrade_arrow_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pricing_information_text"
                    style="@style/TextViewSize20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="center_vertical"
                    android:padding="@dimen/car_review_padding"
                    android:text="@string/review_reservation_upgrade_text"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

                <ImageView
                    android:id="@+id/car_upgrade_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/car_review_padding"
                    android:layout_weight="0.3"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dashboard_image_01" />

            </LinearLayout>

            <TextView
                android:id="@+id/upgrade_car_button"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/car_review_padding"
                android:layout_marginRight="@dimen/car_review_padding"
                android:background="@drawable/green_button_touch_overlay"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                android:text="@string/review_reservation_upgrade_button_text"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans_bold" />

        </com.ehi.enterprise.android.ui.widget.ArrowViewGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/section_divider" />

    </LinearLayout>

</layout>
