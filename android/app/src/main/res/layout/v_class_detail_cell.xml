<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ClassDetailsCellViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ehi_grey_header_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_title"
            style="@style/SectionHeader"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_bold"
            tools:text="00000000000000000000000000000000000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/ehi_table_cell_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cell_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded"
                tools:src="@drawable/icon_transmission_02"/>

            <TextView
                android:id="@+id/cell_text"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"
                android:textColor="@color/ehi_disabled_gray"
                android:fontFamily="@font/source_sans_bold"
                tools:text="M"/>

        </LinearLayout>

    </LinearLayout>
</layout>