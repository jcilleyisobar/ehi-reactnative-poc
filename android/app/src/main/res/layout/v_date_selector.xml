<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data class="DateSelectorViewBinding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_height="@dimen/date_selector_height"
        tools:layout_width="@dimen/date_selector_width_height">

        <TextView
            android:id="@+id/title_text_view"
            style="@style/SectionHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/section_divider_height"
            android:background="@color/ehi_grey_header_bg"
            android:fontFamily="@font/source_sans_bold"
            tools:text="Pick-Up"/>

        <LinearLayout
            android:id="@+id/date_selected_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_text_view"
            android:background="@color/selected_date_cell_bg"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/date_selected_date_text"
                style="@style/TextViewSize24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="Fri, Dec 10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ehi_dark_rule"/>

            <TextView
                android:id="@+id/date_selected_time_text"
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/green_button_touch_overlay"
                android:gravity="center"
                android:text="@string/time_select_section_title"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans_bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_time_selected_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_text_view"
            android:background="@color/selected_date_cell_bg"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/date_time_selected_date_text"
                style="@style/TextViewSize24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="Fri, Dec 10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ehi_dark_rule"/>

            <TextView
                android:id="@+id/date_time_selected_time_text"
                style="@style/TextViewSize24"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="12:00 PM"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/unselected_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_text_view"
            android:background="@drawable/green_button_touch_overlay"
            android:gravity="center"
            android:paddingStart="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small"
            android:orientation="horizontal"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/select_container_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_medium"
                android:src="@drawable/icon_calendar_white"/>

            <TextView
                android:id="@+id/select_container_text"
                style="@style/DateSelector.SelectDateStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_select_section_title"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/source_sans_bold"/>
        </LinearLayout>
    </RelativeLayout>
</layout>