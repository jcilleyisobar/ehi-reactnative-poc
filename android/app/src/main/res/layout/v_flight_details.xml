<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="FlightDetailsViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_base">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reservation_flight_info_title"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_bold" />

            <LinearLayout
                android:id="@+id/current_flight_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/current_flight_airline"
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="airline" />

                <TextView
                    android:id="@+id/current_flight_number"
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    android:visibility="gone"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="11111"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_flight_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/add_flight_title"
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:singleLine="true"
                    android:textColor="@color/green_text_color"
                    android:fontFamily="@font/source_sans_regular"
                    tools:text="Add Flight" />

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="@string/flight_info_subtitle"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_green" />

    </LinearLayout>
</layout>
