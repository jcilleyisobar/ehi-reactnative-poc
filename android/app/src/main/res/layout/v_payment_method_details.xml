<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="PaymentMethodDetailsViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_base">

        <TextView
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:textColor="@color/ehi_black"
            android:text="@string/reservation_confirmation_payment_method_section_title"
            android:fontFamily="@font/source_sans_bold"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/payment_method"
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="Corporate Account"/>

        <TextView
            android:id="@+id/payment_method_details"
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:drawableStart="@drawable/creditcard_01_visa"
            tools:text="xxxxxxxx"/>

        <LinearLayout
            android:id="@+id/pay_now_terms_conditions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="@dimen/padding_small"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pay_now_terms_conditions"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_and_conditions_prepay_title"
                android:textColor="@color/ehi_primary"
                android:fontFamily="@font/source_sans_bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:src="@drawable/arrow_green" />

        </LinearLayout>

    </LinearLayout>

</layout>