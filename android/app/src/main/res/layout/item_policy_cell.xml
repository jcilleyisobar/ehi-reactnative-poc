<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class = "PolicyItemBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/policy_cell_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/policy_text"
            style="@style/PolicyItem"
            android:fontFamily="@font/source_sans_light"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ehi_grey_header_bg"/>

    </LinearLayout>
</layout>