<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="EnrollFullFormFragmentBinding" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ehi.enterprise.android.ui.enroll.widget.EnrollErrorView
                android:id="@+id/enroll_error_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/TextViewSize20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:drawableLeft="@drawable/eplus_logo_01"
                android:drawablePadding="@dimen/padding_small"
                android:gravity="center_vertical"
                android:text="@string/enroll_long_form_title"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light" />

            <com.ehi.enterprise.android.ui.enroll.widget.EnrollStepOneView
                android:id="@+id/enroll_step_one_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.ehi.enterprise.android.ui.enroll.widget.EnrollStepTwoView
                android:id="@+id/enroll_step_two_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.ehi.enterprise.android.ui.enroll.widget.EnrollStepThreeView
                android:id="@+id/enroll_step_three_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.ehi.enterprise.android.ui.widget.DisabledClickButton
                android:id="@+id/continue_button"
                style="@style/GreenContinueButton"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_large"
                android:enabled="false"
                android:text="@string/enroll_join_action" />

        </LinearLayout>

    </ScrollView>

</layout>