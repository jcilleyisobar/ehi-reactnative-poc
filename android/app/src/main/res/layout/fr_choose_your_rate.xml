<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ChooseYourRateFragmentBinding" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/location_info_window_divider_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/car_rate_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ehi.enterprise.android.ui.reservation.widget.EPointsHeaderView
                    android:id="@+id/epoints_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

                <include
                    android:id="@+id/car_cell"
                    layout="@layout/item_car_class_select_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/car_rate_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/padding_xxsmall">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextViewSize20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center_horizontal"
                                android:text="@string/choose_your_rate_section_title"
                                android:textAllCaps="true"
                                android:textColor="@color/ehi_black"
                                android:fontFamily="@font/source_sans_bold" />

                            <ImageView
                                android:id="@+id/payment_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/icon_info_01" />

                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/triangle_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/location_details_background">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/ehi_black" />

                        <com.ehi.enterprise.android.ui.widget.TriangleView
                            android:layout_width="25dp"
                            android:layout_height="11dp"
                            android:layout_gravity="center_horizontal" />

                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/introduction_message_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/location_details_background"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingTop="@dimen/padding_xxsmall"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/introduction_message"
                            style="@style/TextViewSize22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:drawableLeft="@drawable/icon_card_black"
                            android:drawablePadding="@dimen/padding_base"
                            android:text="@string/reservation_select_payment_new_pay_greeting"
                            android:textColor="@color/ehi_black"
                            android:fontFamily="@font/source_sans_light" />

                    </RelativeLayout>

                    <android.support.v4.widget.Space
                        android:id="@+id/spacement_view"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="@color/location_details_background" />

                    <com.ehi.enterprise.android.ui.widget.RateButton
                        android:id="@+id/first_payment_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="@string/choose_your_rate_pay_now_title" />

                    <com.ehi.enterprise.android.ui.widget.RateButton
                        android:id="@+id/second_payment_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="@string/choose_your_rate_pay_later_title" />

                    <com.ehi.enterprise.android.ui.widget.RateButton
                        android:id="@+id/redeem_points_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:primaryText="@string/choose_your_rate_redeem_points_title" />

                </LinearLayout>

            </FrameLayout>

            <com.ehi.enterprise.android.ui.reservation.widget.RentalTermsConditionsView
                android:id="@+id/prepay_terms_conditions"
                android:layout_marginTop="@dimen/margin_medium"
                app:text="@string/general_prepay_policies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.ehi.enterprise.android.ui.reservation.widget.RentalTermsConditionsView
                android:id="@+id/rental_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

</layout>