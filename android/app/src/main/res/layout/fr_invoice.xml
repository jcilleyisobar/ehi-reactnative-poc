<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="InvoiceFragmentBinding" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.ehi.enterprise.android.ui.widget.BannerView
                android:id="@+id/currency_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/padding_base">

                <TextView
                    android:id="@+id/rental_time"
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_black"
                    tools:text="@string/invoice_rental_date" />

                <TextView
                    android:id="@+id/rental_agreement"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="@string/invoice_rental_number" />

                <TextView
                    android:id="@+id/contract"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/ehi_black"
                    android:visibility="gone"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="@string/invoice_rental_contract_name"
                    tools:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/invoice_dark_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/ehi_grey_header_bg" />

            <LinearLayout
                style="@style/SectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/selected_date_cell_bg"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewSize16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/trip_summary_title"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/save_to_photos"
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_base"
                    android:drawableEnd="@drawable/ico_download"
                    android:drawablePadding="@dimen/margin_small"
                    android:gravity="center"
                    android:text="@string/trip_summary_save_photo_button"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_regular" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="@dimen/padding_base">

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trip_summary_pick_up"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold" />

                <TextView
                    android:id="@+id/pickup_time"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="16 August" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pickup_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="@dimen/padding_base"
                android:paddingStart="@dimen/padding_base">

                <TextView
                    android:id="@+id/pickup_name_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="Millennium Park" />

                <TextView
                    android:id="@+id/pickup_address_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_black"
                    android:textIsSelectable="true"
                    android:fontFamily="@font/source_sans_light"
                    app:shareText="@{true}"
                    tools:text="20 E. Randolph St., Chicago, IL 60608 " />

                <TextView
                    android:id="@+id/pickup_phone_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="312-251-0200" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_base"
                android:layout_marginTop="@dimen/padding_base"
                android:background="@drawable/receipt_arrow" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="@dimen/padding_base">

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trip_summary_return"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold" />

                <TextView
                    android:id="@+id/return_time"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="16 August" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_base">

                <TextView
                    android:id="@+id/return_name_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="Millennium Park" />

                <TextView
                    android:id="@+id/return_address_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_black"
                    android:textIsSelectable="true"
                    android:fontFamily="@font/source_sans_light"
                    app:shareText="@{true}"
                    tools:text="20 E. Randolph St., Chicago, IL 60608 " />

                <TextView
                    android:id="@+id/return_phone_view"
                    style="@style/TextViewSize18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/ehi_primary"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="312-251-0200" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@drawable/divider_horiz" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_base">

                <TextView
                    android:id="@+id/total_text_view"
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/trip_summary_final_total"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    android:id="@+id/estimated_total"
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_regular"
                    tools:text="$100.00" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/points_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_base"
                android:visibility="gone">

                <TextView
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/trip_summary_points_earned"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_bold" />

                <TextView
                    android:id="@+id/points_total"
                    style="@style/TextViewSize28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="500" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/invoice_dark_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/ehi_grey_header_bg" />

            <TextView
                style="@style/SectionHeaderSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/selected_date_cell_bg"
                android:text="@string/price_section_title_rental_cost"
                android:fontFamily="@font/source_sans_bold"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/price_summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/section_background"
                android:divider="@drawable/white_divider"
                android:orientation="vertical"
                android:padding="@dimen/padding_base"
                android:showDividers="middle" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_base">

                <TextView
                    android:id="@+id/rental_total_text_view"
                    style="@style/TextViewSize18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="@string/trip_summary_final_total"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    android:id="@+id/rental_estimated_total"
                    style="@style/TextViewSize28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_regular"
                    tools:text="$100.00" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/invoice_dark_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/ehi_grey_header_bg" />

            <com.ehi.enterprise.android.ui.reservation.InvoiceAdditionalInfoView
                android:id="@+id/additional_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/invoice_dark_divider" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/ehi_grey_header_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_base">

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:text="@string/invoice_tax_deduction_warn"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

                <TextView
                    android:id="@+id/vat"
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ehi_black"
                    android:visibility="gone"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="@string/invoice_vat_number" />

                <TextView
                    android:id="@+id/invoice"
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="@string/invoice_number" />

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/invoice_enterprise"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>