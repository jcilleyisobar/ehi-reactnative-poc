<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="LogoutFragmentBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.ehi.enterprise.android.ui.login.LogoutFragment">

        <TextView
            style="@style/TextViewSize18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="@string/signout_confirmation_text"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_regular"/>

        <TextView
            style="@style/GreenContinueButton"
            android:fontFamily="@font/source_sans_bold"
            android:textAllCaps="true"
            android:id="@+id/cancel_button"
            android:text="@string/signout_confirmation_cancel_button"/>

        <TextView
            style="@style/GreenContinueButton"
            android:fontFamily="@font/source_sans_bold"
            android:id="@+id/sign_out_button"
            android:background="@drawable/dark_green_button"
            android:text="@string/signout_confirmation_signout_button"/>
    </LinearLayout>
</layout>
