<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="EditAdditionalInfoViewBinding"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/sectionHeader"
            style="@style/SectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reservation_review_additional_info_section_title"
            android:fontFamily="@font/source_sans_bold"/>

        <TextView
            android:id="@+id/descriptionView"
            style="@style/TextViewSize16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_base"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <LinearLayout
            android:id="@+id/containerViewGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
</layout>
