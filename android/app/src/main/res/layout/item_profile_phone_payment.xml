<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemProfilePhonePaymentViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_profile_phone_payment_view"
                style="@style/TextViewSize18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="917-555-8765 (work)" />

            <TextView
                android:id="@+id/item_profile_phone_payment_exp_view"
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:textColor="@color/ehi_black"
                android:visibility="gone"
                android:fontFamily="@font/source_sans_light"
                tools:text="Expires 06/20"
                tools:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/preferred_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_preferred"
            android:drawablePadding="@dimen/margin_xsmall"
            android:text="@string/profile_preferred_label"
            android:textColor="@color/ehi_primary"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_light"
            tools:visibility="visible" />

    </LinearLayout>

</layout>
