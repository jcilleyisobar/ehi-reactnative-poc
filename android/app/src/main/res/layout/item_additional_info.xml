<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemAdditionalInfoViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_name"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="Employee ID"/>

        <TextView
            android:id="@+id/info_value"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ehi_black"
            android:visibility="gone"
            android:fontFamily="@font/source_sans_light"
            tools:text="12345678"/>

        <TextView
            android:id="@+id/not_provided_view"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/additional_info_not_provided"
            android:textColor="@color/edit_text_hint_color"
            android:fontFamily="@font/source_sans_light_italic"
            />

    </LinearLayout>
</layout>