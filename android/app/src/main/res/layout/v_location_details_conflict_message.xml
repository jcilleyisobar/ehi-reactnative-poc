<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="LocationDetailsConflictMessageViewBinding" />

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_xsmall"
        android:paddingBottom="@dimen/margin_xsmall"
        android:paddingStart="@dimen/margin_xlarge"
        android:layout_width="match_parent"
        android:background="@color/map_details_conflict_gray"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:visibility="gone"
            tools:text="CLOSED ON YOUR PICKUP LOCATION"
            android:fontFamily="@font/source_sans_bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.location.widgets.components.LocationOpenHoursTextView
            android:id="@+id/subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ehi.enterprise.android.ui.location.widgets.components.LocationOpenHoursTextView
            android:id="@+id/extra_subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>