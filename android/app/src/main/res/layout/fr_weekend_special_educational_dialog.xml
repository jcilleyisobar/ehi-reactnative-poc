<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="WeekendSpecialEducationalDialogFragmentBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_base"
        android:paddingLeft="@dimen/padding_base"
        android:paddingRight="@dimen/padding_base">

        <TextView
            android:id="@+id/weekend_special_title"
            style="@style/TextViewSize26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/weekend_special_educational_dialog_title"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            android:id="@+id/weekend_special_description"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_base"
            android:text="@string/weekend_special_educational_dialog_subtitle"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"/>

        <TextView
            android:id="@+id/weekend_special_get_started_button"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/weekend_special_educational_dialog_get_started_but"
            android:fontFamily="@font/source_sans_bold"/>

        <TextView
            android:id="@+id/weekend_special_close_button"
            style="@style/GreenContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekend_special_educational_dialog_close_button_ti"
            android:fontFamily="@font/source_sans_bold"/>

    </LinearLayout>
</layout>