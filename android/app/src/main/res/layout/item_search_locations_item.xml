<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="SearchLocationItemBinding" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white_button_touch_overlay"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_airport_green" />

                    <TextView
                        android:id="@+id/header_title"
                        style="@style/TextViewSize20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/ehi_primary"
                        android:fontFamily="@font/source_sans_light"
                        tools:text="Chicago Midway" />

                </LinearLayout>

                <TextView
                    android:id="@+id/subheader_title"
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="This is sub-text" />

                <TextView
                    android:id="@+id/distance_text"
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/ehi_black"
                    android:visibility="gone"
                    android:fontFamily="@font/source_sans_regular"
                    tools:text="This is distance text" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/edit_text_border_color" />

            <LinearLayout
                android:id="@+id/right_container"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/green_button_touch_overlay"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/icon_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:src="@drawable/icon_locations_02"
                    android:visibility="gone" />

                <TextView
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/location_cell_select_location_text"
                    android:textColor="@color/white"
                    android:fontFamily="@font/source_sans_bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ehi_dark_rule" />

    </LinearLayout>

</layout>
