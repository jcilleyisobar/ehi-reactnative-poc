<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="DamageLiabilityExpandableCellViewBinding"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <include
            android:id="@+id/cell_title_button"
            layout="@layout/v_key_facts_expandable_cell_title"
            bind:include="@{true}"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/key_facts_damage_theft"
                style="@style/TextViewSize16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cell_title_button"
                android:paddingBottom="12dp"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="12dp"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                android:text="@string/key_facts_damage_theft"/>


            <TextView
                android:id="@+id/key_facts_liability_for_damage"
                style="@style/TextViewSize16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cell_title_button"
                android:paddingBottom="12dp"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingTop="12dp"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                android:text="@string/key_facts_liability_for_damage"/>
        </LinearLayout>
    </LinearLayout>
</layout>