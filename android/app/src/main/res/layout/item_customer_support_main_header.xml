<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CustomerSupportMainHeaderItemBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/selected_date_cell_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_header_title"
            style="@style/TextViewSize28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_base"
            android:layout_marginLeft="@dimen/padding_base"
            android:layout_marginRight="@dimen/padding_base"
            android:layout_marginTop="@dimen/padding_base"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_bold"
            tools:text="We're here to help"/>

    </LinearLayout>
</layout>