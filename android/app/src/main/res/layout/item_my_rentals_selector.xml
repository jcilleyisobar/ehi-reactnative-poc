<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="MyRentalsSelectorItemBinding" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashboard_upcoming_rentals_background">

        <RadioGroup
            android:id="@+id/selector_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/upcoming_rentals_selector"
                style="@style/EHISelector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/rentals_segment_upcoming_title"
                android:fontFamily="@font/source_sans_bold" />

            <RadioButton
                android:id="@+id/past_rental_selector"
                style="@style/EHISelector"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/rentals_segment_past_title"
                android:fontFamily="@font/source_sans_bold" />

        </RadioGroup>

    </FrameLayout>
</layout>
