<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="TierInformationViewBinding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/left_text"
            style="@style/TextViewSize18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/source_sans_light"
            tools:text="Tester"/>

        <TextView
            android:id="@+id/right_text"
            style="@style/TextViewSize14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/ehi_grey_header_bg"
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/padding_base"
            android:paddingRight="@dimen/padding_base"
            android:paddingTop="5dp"
            android:textColor="@color/ehi_black"
            android:fontFamily="@font/source_sans_light"
            tools:text="Tester"/>
    </LinearLayout>
</layout>
