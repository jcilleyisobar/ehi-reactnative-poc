<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="SectionHeaderItemBinding">

        <variable
            name="include"
            type="java.lang.Boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ehi_grey_header_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_text"
                style="@style/SectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/source_sans_bold"
                tools:text="Header" />

            <TextView
                android:id="@+id/header_secondary_text"
                style="@style/TextViewSize14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light"
                tools:text="(Secondary Header)" />


            <TextView
                android:id="@+id/header_button"
                style="@style/TitleClear"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/section_divider_height"
                android:visibility="gone"
                android:fontFamily="@font/source_sans_regular"
                tools:text="Clear"
                tools:visibility="visible" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/header_divider" />

        <FrameLayout
            android:id="@+id/section_header_triangle_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/ehi_black"
            android:visibility="gone" />

        <com.ehi.enterprise.android.ui.widget.TriangleView
            android:id="@+id/section_header_triangle"
            android:layout_width="25dp"
            android:layout_height="11dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

    </RelativeLayout>
</layout>
