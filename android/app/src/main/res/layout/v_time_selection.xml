<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="TimeSelectionViewBinding" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.ehi.enterprise.android.ui.reservation.widget.time_selection.snap_scroll.SnappyRecyclerView
            android:id="@+id/background_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.ehi.enterprise.android.ui.reservation.widget.time_selection.snap_scroll.SnappyRecyclerView
            android:id="@+id/foreground_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="@dimen/time_left_padding"
            android:layout_height="@dimen/time_cell_size"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/icon_clock" />

        <TextView
            android:id="@+id/select_time_button"
            style="@style/TextViewSize18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_cell_size"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:paddingLeft="15dp"
            android:paddingRight="40dp"
            android:text="@string/time_picker_button_title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="@font/source_sans_bold" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_base"
            android:src="@drawable/arrow_white" />

        <LinearLayout
            android:id="@+id/warning_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/time_cell_size"
            android:layout_above="@id/select_time_button"
            android:alpha="0"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:paddingLeft="170dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/warning_message"
                style="@style/TextViewSize16"
                android:layout_width="0dp"
                android:layout_height="@dimen/time_cell_size"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/time_selection_location_closed_title"
                android:textColor="#888888"
                android:fontFamily="@font/source_sans_light" />

            <ImageView
                android:id="@+id/warning_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_alert_01" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/select_time_button"
            android:background="@drawable/sh_shadow_above" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/select_time_button"
            android:background="@drawable/sh_shadow_below" />

        <LinearLayout
            android:id="@+id/search_open_locations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_xsmall"
            android:paddingTop="@dimen/padding_xxsmall"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/TextViewSize16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xsmall"
                android:layout_gravity="center_horizontal"
                android:text="@string/ldt_location_closed_location_message_title" />

            <TextView
                android:id="@+id/search_for_locations_button"
                style="@style/GreenButtonTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_xlarge"
                android:layout_marginEnd="@dimen/margin_xlarge"
                android:text="@string/ldt_location_closed_location_button_title"
                android:fontFamily="@font/source_sans_bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/invalid_return_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:clickable="true"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingEnd="@dimen/padding_large"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_base"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/TextViewSize18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_gravity="center_vertical"
                android:drawableStart="@drawable/icon_clock_04"
                android:drawablePadding="@dimen/padding_xsmall"
                android:fontFamily="@font/source_sans_regular"
                android:textColor="@color/ehi_black"
                android:text="@string/time_selection_return_close_time_info_title" />

            <TextView
                style="@style/TextViewSize14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_selection_return_close_time_details"
                android:textColor="@color/ehi_black"
                android:fontFamily="@font/source_sans_light" />

        </LinearLayout>

    </RelativeLayout>
</layout>