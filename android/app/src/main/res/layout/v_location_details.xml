<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="LocationDetailsViewBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/location_image"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:src="@drawable/location_detail_exotics"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_base"
                android:paddingRight="@dimen/padding_base"
                android:paddingBottom="@dimen/margin_medium"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/location_name"
                    style="@style/TextViewSize24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:textColor="@color/ehi_black"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="San Francisco Intl Arpt" />

                <TextView
                    android:id="@+id/location_address"
                    style="@style/TextViewSize14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/ehi_black"
                    android:textIsSelectable="true"
                    android:fontFamily="@font/source_sans_light"
                    app:shareText="@{true}"
                    tools:text="780 Mcdonnell Rd San Francisco, CA 94128" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/location_phone"
                    style="@style/TextViewSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/location_info_text_secondary"
                    android:fontFamily="@font/source_sans_light"
                    tools:text="+1 650-697-9200" />

                <TextView
                    android:drawableLeft="@drawable/icon_clock_04"
                    android:visibility="gone"
                    android:clickable="true"
                    android:drawablePadding="@dimen/padding_xxsmall"
                    android:id="@+id/after_hours_return"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/source_sans_light_italic"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/favorite_button"
                android:layout_width="@dimen/location_details_favorite_button_width"
                android:layout_height="130dp"
                android:background="@drawable/bg_favorite_button"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/st_favorite_ic" />

                <TextView
                    android:id="@+id/location_favorite_text"
                    style="@style/TextViewSize14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="@string/location_details_not_favorited_title"
                    android:textColor="@drawable/st_favorite_text_color"
                    android:fontFamily="@font/source_sans_light" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/get_directions_button"
            style="@style/GreenBorderWhiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/icon_directions_05"
            android:enabled="true"
            android:drawablePadding="@dimen/margin_medium"
            android:minHeight="52dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/location_details_get_directions_title"
            android:fontFamily="@font/source_sans_bold" />

        <TextView
            android:id="@+id/directions_from_terminal_button"
            style="@style/GreenBorderWhiteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/terminal_directions_01"
            android:drawablePadding="@dimen/margin_medium"
            android:enabled="true"
            android:minHeight="52dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/terminal_directions_header_title"
            android:fontFamily="@font/source_sans_bold" />

        <FrameLayout
            android:id="@+id/bottom_padding_plate"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

    </LinearLayout>
</layout>