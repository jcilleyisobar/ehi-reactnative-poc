<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/button_disabled_bg"/>
            <stroke
                android:width="1dp"
                android:color="@color/location_info_text_secondary"/>
            <corners
                android:radius="0dp"/>
        </shape>
    </item>
    <item
        android:state_pressed="true"
        android:state_enabled="true"
        android:drawable="@drawable/button_white_grey" />
    <item
        android:state_focused="true"
        android:state_enabled="true"
        android:drawable="@drawable/button_white_grey" />
    <item
        android:state_enabled="true"
        android:drawable="@drawable/button_white_green" />
</selector>