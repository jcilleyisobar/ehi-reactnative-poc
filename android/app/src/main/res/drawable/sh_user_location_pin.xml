<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <gradient
                android:centerColor="#00000000"
                android:gradientRadius="95%"
                android:type="radial"
                android:startColor="#bb000000"
                />
            <size
                android:width="16dp"
                android:height="16dp"/>
        </shape>

    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape
            android:shape="oval">
            <solid android:color="#4285f4"/>

            <stroke
                android:width="1dp"
                android:color="@color/white"/>
        </shape>
    </item>
</layer-list>