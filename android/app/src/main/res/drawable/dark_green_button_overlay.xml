<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@integer/selectors_animation_duration"
          android:exitFadeDuration="@integer/selectors_animation_duration">
    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ehi_grey_header_bg"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/ehi_primary_dark"/>
        </shape>
    </item>
    <item android:drawable="@color/ehi_primary_dark"/>
</selector>