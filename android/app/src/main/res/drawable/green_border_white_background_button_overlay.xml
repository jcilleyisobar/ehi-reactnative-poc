<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@integer/selectors_animation_duration"
          android:exitFadeDuration="@integer/selectors_animation_duration">

    <item android:state_enabled="true"
          android:state_pressed="true">
        <layer-list>
            <item
                android:drawable="@drawable/green_border"/>
            <item
                android:drawable="@color/white"/>
        </layer-list>
    </item>
    <item android:drawable="@drawable/grey_border_with_silver_bg"
          android:state_enabled="false">
    </item>
    <item android:drawable="@drawable/green_border_white_background"/>
</selector>